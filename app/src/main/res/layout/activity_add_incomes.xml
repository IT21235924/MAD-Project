<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/incomebg"
    tools:context=".AddIncomesActivity">

    <TextView
        android:id="@+id/addIncomeTitle"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="596dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add Income"
        android:textColor="@color/buttonblue"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/incomeNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="482dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Income Name"
        android:inputType="text"
        android:textColorHint="#0583F2" />

    <EditText
        android:id="@+id/incomeAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="413dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Income Amount"
        android:inputType="numberDecimal"
        android:textColorHint="#0583F2"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/incomeDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="345dp"
        android:editable="true"
        android:fontFamily="@font/poppins_medium"
        android:hint="Income Date"
        android:inputType="none"
        android:textColorHint="#0583F2" />

    <EditText
        android:id="@+id/incomeTimeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="274dp"
        android:editable="true"
        android:fontFamily="@font/poppins_medium"
        android:hint="Income Time"
        android:inputType="none"
        android:textColorHint="#0583F2" />

    <Button
        android:id="@+id/saveIncomeButton"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="514dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="170dp"
        android:backgroundTint="@color/buttonblue"
        android:text="Save Income"
        android:textStyle="bold"
        app:cornerRadius="70dp" />

</RelativeLayout>
